    let currentCategory = null;
    let allItems = [];

    // Initialize all items for search
    Object.keys(categoriesData).forEach(key => {
      categoriesData[key].items.forEach(item => {
        allItems.push({ ...item, category: key });
      });
    });

    // Theme Toggle
    document.getElementById('theme-toggle').addEventListener('click', () => {
      currentTheme = currentTheme === 'light' ? 'dark' : 'light';
      document.body.className = `${currentTheme}-theme`;
      
      const themeIcon = document.getElementById('theme-icon');
      const themeText = document.getElementById('theme-text');
      
      if (currentTheme === 'dark') {
        themeIcon.textContent = '‚òÄÔ∏è';
        themeText.textContent = translations[currentLang].light;
      } else {
        themeIcon.textContent = 'üåô';
        themeText.textContent = translations[currentLang].dark;
      }
    });

    // Language Toggle
    document.getElementById('lang-toggle').addEventListener('click', () => {
      currentLang = currentLang === 'vi' ? 'en' : 'vi';
      
      const langIcon = document.getElementById('lang-icon');
      const langText = document.getElementById('lang-text');
      
      if (currentLang === 'en') {
        langIcon.textContent = 'üáªüá≥';
        langText.textContent = 'VI';
      } else {
        langIcon.textContent = 'üá¨üáß';
        langText.textContent = 'EN';
      }
      
      updateLanguage();
    });

    // Search
    document.getElementById('search-input').addEventListener('input', (e) => {
      searchQuery = e.target.value.toLowerCase();
      if (searchQuery) {
        performSearch();
      } else if (currentCategory) {
        renderItems(currentCategory);
      } else {
        document.getElementById('items-container').classList.remove('active');
      }
    });

    function performSearch() {
      const results = allItems.filter(item => {
        const name = (typeof item.name === 'object' ? item.name[currentLang] : item.name).toLowerCase();
        const desc = (typeof item.description === 'object' ? item.description[currentLang] : item.description).toLowerCase();
        return name.includes(searchQuery) || desc.includes(searchQuery);
      });

      renderSearchResults(results);
    }

    function renderSearchResults(results) {
      const container = document.getElementById('items-container');
      
      if (results.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üîç</div>
            <p class="empty-text">${translations[currentLang].emptyTitle}</p>
            <p class="empty-subtext">${translations[currentLang].emptySubtext}</p>
          </div>
        `;
        container.classList.add('active');
        return;
      }

      const grid = document.createElement('div');
      grid.className = 'items-grid';

      results.forEach((item, index) => {
        grid.appendChild(createItemCard(item, index));
      });

      container.innerHTML = '';
      container.appendChild(grid);
      container.classList.add('active');
    }

    function updateLanguage() {
      document.getElementById('categories-label').textContent = translations[currentLang].categoriesLabel;
      document.getElementById('search-input').placeholder = translations[currentLang].searchPlaceholder;
      
      const themeText = document.getElementById('theme-text');
      themeText.textContent = currentTheme === 'dark' ? translations[currentLang].light : translations[currentLang].dark;
      
      // Update menu texts
      document.getElementById('menu-youtube').textContent = translations[currentLang].menuYoutube;
      document.getElementById('menu-support').textContent = translations[currentLang].menuSupport;
      document.getElementById('menu-store').textContent = translations[currentLang].menuStore;
      document.getElementById('menu-tutorials').textContent = translations[currentLang].menuTutorials;
      
      // Update store submenu texts
      document.getElementById('submenu-store1').textContent = translations[currentLang].stores.store1;
      document.getElementById('submenu-store2').textContent = translations[currentLang].stores.store2;
      document.getElementById('submenu-store3').textContent = translations[currentLang].stores.store3;
      
      // Update tutorial submenu texts
      document.getElementById('submenu-esign').textContent = translations[currentLang].tutorials.esign;
      document.getElementById('submenu-cert').textContent = translations[currentLang].tutorials.cert;
      document.getElementById('submenu-signedapp').textContent = translations[currentLang].tutorials.signedapp;
      document.getElementById('submenu-ipamod').textContent = translations[currentLang].tutorials.ipamod;
      document.getElementById('submenu-conf').textContent = translations[currentLang].tutorials.conf;
      document.getElementById('submenu-dylib').textContent = translations[currentLang].tutorials.dylib;
      
      renderCategories();
      if (searchQuery) {
        performSearch();
      } else if (currentCategory) {
        renderItems(currentCategory);
      }
    }

    function renderCategories() {
      const grid = document.getElementById('categories-grid');
      grid.innerHTML = '';

      Object.keys(categoriesData).forEach((key, index) => {
        const card = document.createElement('div');
        card.className = 'category-card';
        if (currentCategory === key) card.classList.add('active');
        
        card.innerHTML = `
          <div class="category-icon">${icons[key]}</div>
          <p class="category-name">${translations[currentLang].categories[key]}</p>
        `;
        card.onclick = () => selectCategory(key);
        grid.appendChild(card);
      });
    }

    function selectCategory(categoryKey) {
      currentCategory = categoryKey;
      searchQuery = '';
      document.getElementById('search-input').value = '';
      
      const cards = document.querySelectorAll('.category-card');
      cards.forEach((card, index) => {
        if (Object.keys(categoriesData)[index] === categoryKey) {
          card.classList.add('active');
        } else {
          card.classList.remove('active');
        }
      });

      renderItems(categoryKey);
    }

    function renderItems(categoryKey) {
      const container = document.getElementById('items-container');
      const category = categoriesData[categoryKey];

      if (!category || !category.items || category.items.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üì≠</div>
            <p class="empty-text">${translations[currentLang].emptyTitle}</p>
            <p class="empty-subtext">${translations[currentLang].emptySubtext}</p>
          </div>
        `;
        container.classList.add('active');
        return;
      }

      const grid = document.createElement('div');
      grid.className = 'items-grid';

      category.items.forEach((item, index) => {
        grid.appendChild(createItemCard(item, index));
      });

      container.innerHTML = '';
      container.appendChild(grid);
      container.classList.add('active');
    }

    function createItemCard(item, index) {
      const card = document.createElement('div');
      card.className = 'item-card';
      card.style.animationDelay = `${index * 0.05}s`;
      
      const itemName = typeof item.name === 'object' ? item.name[currentLang] : item.name;
      const itemDesc = typeof item.description === 'object' ? item.description[currentLang] : item.description;
      
      card.innerHTML = `
        <div class="item-header">
          <div class="item-image-wrapper">
            ${item.imageUrl ? 
              `<img src="${item.imageUrl}" alt="${itemName}" class="item-image has-url" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
              <div class="item-image" style="display:none;">üì¶</div>` :
              `<div class="item-image">üì¶</div>`
            }
            ${item.isNew ? `<div class="item-badge">${translations[currentLang].new}</div>` : ''}
          </div>
          <div class="item-info">
            <h3 class="item-title">
              ${itemName}
              <span class="status-dot"></span>
            </h3>
            <div class="item-meta">
              <span class="item-version">${item.version}</span>
              <span class="item-downloads">
                <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                ${formatNumber(item.downloads)}
              </span>
            </div>
          </div>
        </div>
        <p class="item-description">${itemDesc}</p>
        <div class="item-actions">
          <a href="${item.url}" class="download-btn" target="_blank" rel="noopener noreferrer">
            <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
            <span>${translations[currentLang].download}</span>
          </a>
          <button class="info-btn">
            <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
          </button>
        </div>
      `;
      
      return card;
    }

    function formatNumber(num) {
      if (num >= 1000) {
        return (num / 1000).toFixed(1) + 'K';
      }
      return num.toString();
    }

    async function onConfigChange(config) {
      const titleElement = document.getElementById('page-title');
      const subtitleElement = document.getElementById('page-subtitle');
      const navTitleElement = document.getElementById('nav-title');
      const logoImage = document.getElementById('logo-image');
      const logoPlaceholder = document.getElementById('logo-placeholder');

      titleElement.textContent = config.page_title || defaultConfig.page_title;
      subtitleElement.textContent = config.page_subtitle || defaultConfig.page_subtitle;
      navTitleElement.textContent = config.page_title || defaultConfig.page_title;

      if (config.logo_url && config.logo_url.trim() !== '') {
        logoImage.src = config.logo_url;
        logoImage.style.display = 'block';
        logoPlaceholder.style.display = 'none';
      } else {
        logoImage.style.display = 'none';
        logoPlaceholder.style.display = 'flex';
      }
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.primary_color || defaultConfig.primary_color,
            set: (value) => {
              config.primary_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ primary_color: value });
              }
            }
          },
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ background_color: value });
              }
            }
          },
          {
            get: () => config.card_color || defaultConfig.card_color,
            set: (value) => {
              config.card_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ card_color: value });
              }
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ text_color: value });
              }
            }
          }
        ],
        borderables: [],
        fontEditable: undefined,
        fontSizeable: undefined
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ["page_title", config.page_title || defaultConfig.page_title],
        ["page_subtitle", config.page_subtitle || defaultConfig.page_subtitle],
        ["logo_url", config.logo_url || defaultConfig.logo_url]
      ]);
    }

    // Initialize
    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }

    renderCategories();
    onConfigChange(defaultConfig);
  </script>
